<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.example.expertism">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:usesCleartextTraffic="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".CreateBlogActivity"></activity>
        <activity android:name=".ViewBlogActivity" />
        <activity android:name=".MyProfileActivity" />
        <activity
            android:name=".DevelopersActivity"
            android:label="Developers" />
        <activity
            android:name=".CreateProfile"
            android:label="Create Profile" />
        <activity android:name=".CategoryActivity" />
        <activity android:name=".HomeActivity" />
        <activity
            android:name=".SignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SplashActivity" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>